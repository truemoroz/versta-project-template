extends ../../layouts/default
include ../../components/ui-kit/ui-kit

block head
  - var pageTitle = 'Versta Project Template'

block content
  +ui-kit
    +ui-kit-head
      +e.logo Логотип
      +e.name Название проекта
  
    //- Сетка
    +ui-section._grid
      +ui-section-head
        h2 Сетка
        p Отступы слева и справа от экрана: 20px ($container-padding)
        p Ширина контейнера: 960px ($container-width)
        p Ширина контейнера сетки: 100% ($grid-container-width)
        p Колонок: 12 ($grid-cols)
        p Горизонтальное расстояние между колонками: 20px ($grid-gap)
        p Вертикальное расстояние между колонками: 20px ($grid-gap-vertical)
        p Переменные: styles/helpers/_variables.scss
        p Блок: blocks/grid/
      +ui-section-content()
        +grid
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(4)
          +col(4)
          +col(4)
          +col(6)
          +col(6)
    
    //- Цвета
    +ui-section
      +ui-section-head
        h2 Цвета сайта
        p Переменные находятся в файле styles/helpers/_variables.scss
      +ui-section-content()
        +ui-elements-list()
          +ui-color('black', '$color-basic', true)
          +ui-color('blue', '$color-main', true)
          +ui-color('#777', '$color-placeholder', true)
          +ui-color('black', '$color-input', true)
          +ui-color('#ccc', '$color-border')

    //- Цвета
    +ui-section
      +ui-section-head
        h2 Градиенты
        p Цвета для градиентов находятся в файле styles/helpers/_variables.scss
        p Сами градиенты в styles/helpers/_gradients.scss
      +ui-section-content()
        +ui-elements-list()
          +ui-gradient('%gradient-main', true)._gradient_main

    //- Шрифты и контентная зона
    +ui-section#ui-fonts-zone
      +ui-section-head
        h2 Шрифты и контентная зона
        p Основной шрифт: Arial ($font-main), font-weight: 400, 600
        p Дополнительный шрифт: Times New Roman ($font-second), font-weight: 400, 600
        p Переменные находятся в файле styles/helpers/_variables.scss
        p Шрифты подключены в styles/helpers/_fonts.scss
        p Контентная зона: blocks/content-zone
        p Стили всех текстов лежат в файле styles/helpers/_text-styles.scss и должны импортироваться из него через директиву @extend и задаваться через "временные" классы %className
      +ui-section-content()
        +ui-description .content-zone
        +ui-special()
          +content-zone
            h1 Заголовок H1 (%heading-1)
            h2 Заголовок H2 (%heading-2)
            h3 Заголовок H3 (%heading-3)
            h4 Заголовок H4 (%heading-4)
            h5 Заголовок H5 (%heading-5)
            h6 Заголовок H6 (%heading-6)
            p Текст p (%text)<br> Цитата внутри текста p: <q>Цитата q</q>
            p <small>Тег small внутри p (%text-small)</small>
            blockquote
              p Демонстрация цитаты через тег blockquote
              h4 Внутри могут быть заголовки
              p Текст с <a href="#">ссылкой в тексте</a>
            p Картинка в тексте (img):
            img(src="http://verstaburo.com/patterns/pattern.jpg")
            p Маркированный список ul. Стили взяты из блока lists
            ul
              li Элемент списка
              li Другой элемент
                ul
                  li Элемент списка
                  li Другой элемент
                  li Элемент списка
              li Элемент списка
            p Нумерованный список ol. Стили взяты из блока lists
            ol
              li Элемент списка
              li Другой элемент
                ol
                  li Элемент списка
                  li Другой элемент
                  li Элемент списка
              li Элемент списка
        +ui-description Другие стили текстов:
        +ui-custom-text._style-1 Пример кастомного стиля на примере стандартного (%text)
          
    //- Таблицы
    +ui-section
      +ui-section-head
        h2 Таблицы
        p Блок: blocks/table
      +ui-section-content()
        +table()
          thead
            tr
              td Ячейка
              td Ячейка
              td Ячейка
          tr
            td Ячейка
            td Ячейка
            td Ячейка
          tr
            td Ячейка
            td Ячейка
            td Ячейка

    //- Кнопки
    +ui-section
      +ui-section-head
        h2 Кнопки
        p Блок: blocks/button
      +ui-section-content()
        +ui-elements-list()
          +button()(href="#") .button
          +button('button')(href="#" disabled) .button:disabled
        +ui-description При клике на .js-anchor происходит скролл к элементу из атрибута href. Блок: blocks/js-functions/anchor.js
        +button()(href="#ui-fonts-zone").js-anchor .js-anchor
        +ui-description При клике на .js-freeze скролл страницы блокируется, на .js-unfreeze разблокируется. Блок: blocks/js-functions/freeze.js. Функции freeze() и unfreeze() можно импортировать и использовать в модалках, бургере или где-то еще
        +ui-elements-list()
          +button()(href="#").js-freeze .js-freeze
          +button()(href="#").js-unfreeze .js-unfreeze
          
    //- Списки
    +ui-section
      +ui-section-head
        h2 Списки
        p Блок: blocks/lists
        p По желанию можно доработать (для каких-то сложных списков). Добавить миксин +list-item и вписать туда шаблон для li
      +ui-section-content()
        +ui-description ul.list
        +ul-list
          li Элемент списка
            +ul-list
              li Элемент списка
              li Элемент списка
              li Элемент списка
          li Элемент списка
          li Элемент списка
        +ui-description ol.list
        +ol-list(ol)
          li Элемент списка 
          li Элемент списка
            +ol-list(ol)
              li Элемент списка 
              li Элемент списка
              li Элемент списка
          li Элемент списка
          
    //- Табы
    +ui-section
      +ui-section-head
        h2 Элементы форм
        p Блок: blocks/form-elements
      +ui-section-content()
        +grid
          +col(6)
            +ui-description .input
            +input(placeholder="Плейсхолдер")
          +col(6)
            +ui-description .select
            +select
              option Опция
              option Опция
              option Опция
          +col(6)
            +ui-description .checkradio
            +checkbox('ui-checkbox', 'test', 'true') Чекбокс
          +col(6)
            +ui-description .checkradio
            +ui-elements-list
              +radio('ui-radio', 'test', 'true') Радиокнопка
              +radio('ui-radio', 'test-2', 'false') Радиокнопка
      
    //- Табы
    +ui-section
      +ui-section-head
        h2 Табы
        p Блок: blocks/tabs
      +ui-section-content()
      
    //- Попапы
    +ui-section
      +ui-section-head
        h2 Попапы
        p Блок: blocks/popups
      +ui-section-content()
        
    //- Ссылки
    +ui-section
      +ui-section-head
        h2 Ссылки
        p Блок: blocks/link
        p Стили ссылок на всем сайте импортируются из этого блока
      +ui-section-content()
        +ui-description .link
        +link()(href="#") Обычная ссылка
        +ui-description .link_dashed
        +link()(href="#")._dashed Пунктирная ссылка
          
    //- Табы
    +ui-section
      +ui-section-head
        h2 Фоновое видео
        p Блок: blocks/bg-video
      +ui-section-content()
